<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="400.0" maxWidth="452.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="452.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="business.LoginController">
    <children>
        <ImageView fitHeight="406.0" fitWidth="452.0" layoutY="-5.0">
            <image>
                <Image url="@Books.jpg"/>
            </image>
        </ImageView>
        <Label alignment="CENTER_RIGHT" layoutX="22.0" layoutY="172.0" prefHeight="17.0" prefWidth="51.0"
               text="User ID">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <Label alignment="CENTER_RIGHT" layoutX="7.0" layoutY="207.0" prefHeight="17.0" prefWidth="66.0"
               text="Password">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="82.0" layoutY="164.0" prefHeight="27.0" prefWidth="132.0"/>
        <PasswordField fx:id="passwordField" layoutX="82.0" layoutY="199.0" prefHeight="27.0" prefWidth="132.0"/>
        <Button fx:id="loginButton" layoutX="82.0" layoutY="243.0" mnemonicParsing="false" onAction="#clickLogin"
                prefHeight="27.0" prefWidth="132.0" text="Login"/>
        <Label contentDisplay="CENTER" layoutX="82.0" layoutY="54.0" prefHeight="53.0" prefWidth="132.0" text="LIBRARY"
               textFill="#256b3d">
            <font>
                <Font name="Verdana Bold" size="25.0"/>
            </font>
        </Label>
        <Label id="loginError" fx:id="loginErrorMessage" alignment="CENTER" layoutX="52.0" layoutY="282.0" opacity="0.0"
               prefHeight="42.0" prefWidth="185.0" style="-fx-background-color: RED;" textAlignment="CENTER"
               textFill="WHITE" wrapText="true">
            <font>
                <Font name="Verdana Bold" size="12.0"/>
            </font>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </Label>
    </children>
</AnchorPane>
